<Window x:Class="ITHS_DB_Labb03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITHS_DB_Labb03"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:views="clr-namespace:ITHS_DB_Labb03.View"
        mc:Ignorable="d"
        Title="Just Do It"
        Width="1024"
        Height="800"
        MinWidth="650"
        MinHeight="400"
        Closing="Window_Closing">

    <Grid>
        <views:ListView Visibility="{Binding ListViewVisibility}" />
        <views:UserView Visibility="{Binding UserViewModel.UserViewVisibility}" />
        <views:UserDetailsView Visibility="{Binding UserViewModel.UserDetailsVisibility}" />
    </Grid>

</Window>
