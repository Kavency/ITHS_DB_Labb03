<UserControl x:Class="ITHS_DB_Labb03.View.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ITHS_DB_Labb03.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White">
    <WrapPanel Margin="5"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="5"
                                BorderThickness="0"
                                Background="Transparent"
                                Command="{Binding DataContext.SetCurrentUserCMD, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}">
                            <StackPanel Margin="5">
                                <Border BorderThickness="3"
                                        BorderBrush="Black"
                                        Width="60"
                                        Height="60"
                                        CornerRadius="30">
                                    <fa:IconBlock Icon="User"
                                                  FontSize="40" />
                                </Border>
                                <TextBlock Text="{Binding FirstName}"
                                           TextAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
        <Button VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="5"
                BorderThickness="0"
                Background="Transparent"
                Command="{Binding AddNewUserCMD}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Border BorderThickness="3"
                        BorderBrush="Black"
                        Width="60"
                        Height="60"
                        CornerRadius="30">
                    <fa:IconBlock Icon="Plus"
                                  FontSize="40" />
                </Border>
                <TextBlock Text=""
                           TextAlignment="Center" />
            </StackPanel>
        </Button>
    </WrapPanel>
</UserControl>
