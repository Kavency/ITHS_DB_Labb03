<UserControl x:Class="ITHS_DB_Labb03.View.ListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ITHS_DB_Labb03.View"
             xmlns:vm="clr-namespace:ITHS_DB_Labb03.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MaxWidth="315" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85" />
            <RowDefinition Height="55" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Left side -->
        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin=" 20 5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Border BorderThickness="3"
                    BorderBrush="Black"
                    Width="60"
                    Height="60"
                    CornerRadius="30">
                <fa:IconBlock Icon="User"
                              FontSize="40" />
            </Border>

            <TextBlock Text="{Binding UserViewModel.CurrentUser.UserName}"
                       VerticalAlignment="Center"
                       Margin="15 0"
                       FontSize="20" />
            <Button Padding="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding UserViewModel.ShowUsersCMD}">
                <fa:IconBlock Icon="Exchange"
                              FontSize="15" />
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBox MinWidth="250"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     MinHeight="25" />
            <fa:IconBlock Icon="MagnifyingGlass"
                          FontSize="20"
                          Margin="5" />
        </StackPanel>

        <ListView Grid.Column="0"
                  Grid.Row="2"
                  Margin="15 0">

        </ListView>


        <!-- List Textbox -->
        <TextBox Grid.Column="0"
                 Grid.Row="3"
                 x:Name="ListTextBox"
                 Margin="15 5"
                 Visibility="{Binding TodoCollectionViewModel.IsListTextVisible}"
                 Text=""/>
        
        <!-- List Button -->
        <Button Grid.Column="0"
                Grid.Row="3"
                Margin="15 5"
                Command="{Binding TodoCollectionViewModel.ShowListTextCMD}"
                Visibility="{Binding TodoCollectionViewModel.IsListButtonVisible}"
                FocusManager.FocusedElement="{Binding ElementName=ListTextBox}">

            
            <Button.Content>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <fa:IconBlock Icon="Plus"
                                  FontSize="25"
                                  Margin="10" />
                    <TextBlock Text="Add new list"
                               FontSize="15"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button.Content>
        </Button>

        <!-- Right side -->
        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Margin="10">

            <TextBlock Text="Listheader"
                       FontSize="30" />
            <TextBlock Text="2025-01-13"
                       FontSize="16" />

        </StackPanel>

        <ListView Grid.Column="1"
                  Grid.Row="1"
                  Grid.RowSpan="2"
                  Margin="15 0">

        </ListView>
        <ListView Grid.Column="1"
                  Grid.Row="1"
                  Grid.RowSpan="2"
                  Margin="15 0">
        </ListView>

        <Button Grid.Column="1"
                Grid.Row="3"
                Margin="15 5">
            <Button.Content>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <fa:IconBlock Icon="Plus"
                                  FontSize="25"
                                  Margin="10" />
                    <TextBlock Text="Add new task"
                               FontSize="15"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
