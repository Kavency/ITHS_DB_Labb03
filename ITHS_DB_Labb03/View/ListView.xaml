<UserControl x:Class="ITHS_DB_Labb03.View.ListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ITHS_DB_Labb03.View"
             xmlns:vm="clr-namespace:ITHS_DB_Labb03.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MaxWidth="315" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Left side -->
        <DockPanel Grid.Column="0"
                   Grid.Row="0"
                   Margin="0 "
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   LastChildFill="True"
                   MinWidth="285">
            <fa:IconBlock Icon="UserCircle"
                          FontSize="50"
                          DockPanel.Dock="Left" />
            <Button Padding="0"
                    Background="White"
                    BorderBrush="black"
                    DockPanel.Dock="Left"
                    Width="19"
                    Height="19"
                    Panel.ZIndex="1"
                    Margin="-13 0 0 -32"
                    VerticalAlignment="Center"
                    Command="{Binding UserViewModel.ShowUsersCMD}">
                <fa:IconBlock Icon="ArrowsRotate"                              FontSize="15"
                              Foreground="red"
                              ToolTip="Change user" />
            </Button>
            <TextBlock Text="{Binding UserViewModel.CurrentUser.UserName}"
                       VerticalAlignment="Center"
                       Margin="10 0"
                       FontSize="15"
                       d:Text="John Doe" />
        </DockPanel>
        <ListView Grid.Column="0"
                  Grid.Row="1"
                  Margin="15 0"
                  ItemsSource="{Binding TodoCollectionViewModel.TodoCollections}"
                  SelectedItem="{Binding TodoCollectionViewModel.CurrentTodoCollection}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Stretch">
                    <Grid HorizontalAlignment="Stretch"
                          Width="270">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Title}"
                                   HorizontalAlignment="Left"
                                   Grid.Column="0" />
                        <Button Background="Transparent"
                                BorderBrush="Transparent"
                                Grid.Column="1"
                                Command="{Binding DataContext.TodoCollectionViewModel.UpdateListCMD, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                ToolTip="Edit list">
                            <fa:IconBlock Icon="Edit"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          FontSize="15" />
                        </Button>
                        <Button Background="Transparent"
                                BorderBrush="Transparent"
                                Grid.Column="2"
                                Command="{Binding DataContext.TodoCollectionViewModel.DeleteListCMD, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                ToolTip="Delete list"
                                Visibility="Visible">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=IsMouseOver}"
                                                     Value="True">
                                            <Setter Property="Visibility"
                                                    Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconBlock Icon="XmarkCircle"
                                          Foreground="Red"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          FontSize="15" />
                        </Button>
                    </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- List Textbox -->
        <DockPanel LastChildFill="True"
                   Grid.Column="0"
                   Grid.Row="3"
                   Margin="15 5">
            <!-- Add New List Button-->
            <Button DockPanel.Dock="Right"
                    Command="{Binding TodoCollectionViewModel.CreateListCMD}"
                    CommandParameter="{Binding ElementName=NewListTextBox, Path=Text}"
                    VerticalAlignment="Center"
                    Margin="-30 6 0 6"
                    Padding="0"
                    Height="25"
                    Width="25"
                    Panel.ZIndex="1"
                    BorderBrush="Transparent"
                    Background="Transparent">
                <Button.Content>
                    <fa:IconBlock Icon="Plus"
                                  FontSize="20"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
                </Button.Content>
            </Button>
            <Grid>
                <TextBlock Panel.ZIndex="1"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Padding="10"
                           Visibility="{Binding ElementName=NewListTextBox, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"
                           Foreground="SlateGray"
                           Text="Add new list..." />
                <TextBox x:Name="NewListTextBox"
                         VerticalAlignment="Center"
                         Padding="5"
                         Text="{Binding TodoCollectionViewModel.NewListName}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return"
                                    Command="{Binding TodoCollectionViewModel.CreateListCMD}"
                                    CommandParameter="{Binding ElementName=NewListTextBox, Path=Text}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </DockPanel>

        <!-- Right side -->
        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Margin="10">
            <TextBlock d:Text="Current List Title"
                       Text="{Binding TodoCollectionViewModel.CurrentTodoCollection.Title}"
                       FontSize="25" />
            <TextBlock d:Text="2025-01-13"
                       Text="{Binding TodoCollectionViewModel.CurrentTodoCollection.CollectionCreated}"
                       FontSize="12" />
        </StackPanel>

        <!-- Listview for todos -->
        <ListView Grid.Column="1"
                  Grid.Row="1"
                  Margin="10 0">
        </ListView>
        
        <!-- Below is a second listview, for completed todos -->
        <ListView Grid.Column="1"
                  Grid.Row="1"
                  Margin="10 0"
                  ItemsSource="{Binding TodoCollectionViewModel}"
                  DisplayMemberPath="Title"
                  SelectedItem="{Binding TodoCollectionViewModel.CurrentTodo}">
        </ListView>

        <!--Task List-->
        <DockPanel LastChildFill="True"
                   Grid.Column="1"
                   Grid.Row="3"
                   Margin="10 5">
            <!-- Add New Task Button-->
            <Button DockPanel.Dock="Right"
                    Command="{Binding TodoCollectionViewModel.CreateTaskCMD}"
                    CommandParameter="{Binding ElementName=NewTaskTextBox, Path=Text}"
                    VerticalAlignment="Center"
                    Margin="-30 6 0 6"
                    Padding="0"
                    Height="25"
                    Width="25"
                    Panel.ZIndex="1"
                    BorderBrush="Transparent"
                    Background="Transparent">
                <Button.Content>
                    <fa:IconBlock Icon="Plus"
                                  FontSize="20"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
                </Button.Content>
            </Button>
            <Grid>
                <TextBlock Panel.ZIndex="1"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Padding="10"
                           Visibility="{Binding ElementName=NewTaskTextBox, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"
                           Foreground="SlateGray"
                           Text="Add new task..." />
                <TextBox x:Name="NewTaskTextBox"
                         VerticalAlignment="Center"
                         Padding="5"
                         Text="{Binding TodoCollectionViewModel.CurrentTodo.Title}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return"
                                    Command="{Binding TodoCollectionViewModel.CreateTaskCMD}"
                                    CommandParameter="{Binding ElementName=NewTaskTextBox, Path=Text}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
