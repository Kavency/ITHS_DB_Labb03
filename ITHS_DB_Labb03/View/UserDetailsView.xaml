<UserControl x:Class="ITHS_DB_Labb03.View.UserDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ITHS_DB_Labb03.View"
             xmlns:core="clr-namespace:ITHS_DB_Labb03.Core"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center">
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Center"
                       Margin="0 30 0 0"
                       FontSize="35"
                       Text="Enter user details" />
            <Separator BorderThickness="4"
                       BorderBrush="Black"
                       Margin="0 0 0 30"/>
            <Label Content="Firstname:" />
            <TextBox>
                <TextBox.Text>
                    <Binding Path="UserViewModel.UserDetails.FirstName">
                        <Binding.ValidationRules>
                            <core:NotEmptyStringValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label Content="Lastname:" />
            <TextBox>
                <TextBox.Text>
                    <Binding Path="UserViewModel.UserDetails.LastName">
                        <Binding.ValidationRules>
                            <core:NotEmptyStringValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label Content="Username:" />
            <TextBox>
                <TextBox.Text>
                    <Binding Path="UserViewModel.UserDetails.UserName">
                        <Binding.ValidationRules>
                            <core:NotEmptyStringValidation />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label Content="Email" />
            <TextBox Text="{Binding UserViewModel.UserDetails.Email}"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Save"
                        Margin="15"
                        Padding="15 5"
                        Visibility="{Binding UserViewModel.SaveButtonVisibility}"
                        Command="{Binding UserViewModel.AddNewUserCMD}" />
                <Button Content="Update"
                        Margin="15"
                        Padding="15 5"
                        Visibility="{Binding UserViewModel.UpdateButtonVisibility}"
                        Command="{Binding UserViewModel.AddNewUserCMD}"
                        CommandParameter="update"/>
                <Button Content="Cancel"
                        Margin="15"
                        Padding="15 5"
                        Command="{Binding UserViewModel.CancelNewUserCMD}"
                        CommandParameter="{Binding}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
